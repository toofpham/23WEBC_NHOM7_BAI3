@model TachLayout.Models.Product
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Title {
        Thêm sản phẩm
}

<h2>Thêm sản phẩm</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Tên sản phẩm</label>
        <input asp-for="TenSP" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giá</label>
        <input asp-for="Gia" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giá khuyến mãi</label>
        <input asp-for="GiaKM" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mã danh mục</label>
        <input asp-for="MaDanhMuc" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Hình ảnh</label>
        <input type="file" name="HinhFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Tag Name</label>
        <input asp-for="TagName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}
