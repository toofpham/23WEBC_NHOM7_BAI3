@{
    // Lấy dữ liệu WebSetting từ ViewBag
    var websetting = ViewBag.WebSetting as TachLayout.Models.WebSetting;
}

<div id="templatemo_footer_wrapper">
    <div id="templatemo_footer">
        <div class="footer_left">
            <a href="#">
                <img src="images/1311260370_paypal-straight.png" alt="Paypal" />
            </a>
            <a href="#">
                <img src="images/1311260374_mastercard-straight.png" alt="Master" />
            </a>
            <a href="#">
                <img src="images/1311260374_visa-straight.png" alt="Visa" />
            </a>
        </div>

        <div class="footer_right">
            <p>
                <a href="/">Home</a> |
                <a href="/products">Products</a> |
                <a href="/about">About</a> |
                <a href="/faqs">FAQs</a> |
                <a href="/checkout">Checkout</a> |
                <a href="/contact">Contact</a>
            </p>
            <p>
                Copyright © @DateTime.Now.Year
                <a href="#">@(websetting?.TenSite ?? "Tên website")</a>
            </p>

            <!-- Thông tin WebSetting -->
            @if (websetting != null)
            {
                <div style="margin-top:10px; font-size:14px; color:#ddd;">
                    <p><strong>Địa chỉ:</strong> @websetting.DiaChi</p>
                    <p><strong>Email:</strong> @websetting.Email</p>
                    <p><strong>Hotline:</strong> @websetting.HotLine</p>
                </div>
            }
            else
            {
                <div style="margin-top:10px; font-size:14px; color:#ddd;">
                    <p><em>Chưa có thông tin website</em></p>
                </div>
            }
        </div>

        <div class="cleaner"></div>
    </div>
</div>
